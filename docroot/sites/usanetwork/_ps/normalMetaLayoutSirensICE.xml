<?xml version="1.0"?>
<layout>
    <controls>
        <card id="tpAdvertisementControls">
            <!-- Ad playback control rack layout goes here. -->
            <region id="tpBottomFloatRegion">
            </region>
        </card>
        <card id="tpPreviewControls">
            <!-- Preview image control rack layout goes here. -->
        </card>
        <card id="tpNormalControls">
            <region id="tpBottomFloatRegion" alpha="85" initialHideDelay="400ms" autoHideDelay="5s" scale="1.0">
                <row height="8">
                    <control id="tpScrubber" verticalAlign="middle" showTooltip="never" />
                </row>
                <row height="30" paddingBottom="3">
                    <group direction="horizontal" verticalAlign="middle">
                        <spacer width="10"/>
                        <control id="tpPlay" verticalAlign="middle"/>
                        <spacer width="5"/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle">
                        <spacer/>
                        <control id="tpCurrentTime"/>
                        <control id="tpTimeDivider"/>
                        <control id="tpTotalTime"/>
                        <spacer/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle" percentWidth="100">
                        <control id="tpMute" />
                        <control id="tpVolumeSlider" width="100%" />
                        <spacer/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle">
                        <control id="tpFullScreen" verticalAlign="middle"/>
                    </group>
                </row>
            </region>
        </card>
        <card id="tpFullScreenControls">
            <region id="tpBottomFloatRegion" alpha="85" initialHideDelay="400ms" autoHideDelay="5s" scale="1.0">
                <row height="8">
                    <control id="tpScrubber" verticalAlign="middle" showTooltip="never" />
                </row>
                <row height="30">
                    <group direction="horizontal" verticalAlign="middle">
                        <control id="tpPlay" verticalAlign="middle"/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle">
                        <spacer/>
                        <control id="tpCurrentTime"/>
                        <control id="tpTimeDivider"/>
                        <control id="tpTotalTime"/>
                        <spacer/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle" percentWidth="100">
                        <control id="tpMute"/>
                        <control id="tpVolumeSlider" width="100" />
                        <spacer/>
                    </group>
                    <group direction="horizontal" verticalAlign="middle">
                        <control id="tpFullScreen" verticalAlign="middle"/>
                    </group>
                </row>
            </region>
        </card>
    </controls>
</layout>