/**
 * Implementation of hook_block_view().
 */
function usanetwork_lyris_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'newsletter_subscription':
      $block['subject'] = '';
      $block['content'] = _usanetwork_lyris_signup_block();
