            }
          }
          break;
        case 'characters':
          $omniture_prop3 = 'Bio';
          $omniture_prop4 = 'Profile Page'; // This is intentional per Loretta!
          if (isset($args[4])) {
            $node = _usanetwork_microsite_get_person_by_url($node, $args[4]);
            if(!empty($node)) {
              $person_names = _usanetwork_microsite_get_person_title_and_role_name($node);
