/**
 * Parse url and get current video parameter.
 *
 * @param $url
 * @return null
 */
function _usanetwork_microsite_get_video_parameter_by_url($url) {
  $parts = explode('videos/', $url);
  if(isset($parts[1])) {
    $parts_with_param = explode('/', $parts[1]);
    return $parts_with_param[0];
  }
  return NULL;
}

