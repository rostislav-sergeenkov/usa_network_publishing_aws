        $block_of_items = $function($related_content);

        $load_more_link =  usanetwork_related_content_is_load_more_link($related_content, USA_TV_SHOW_RELATED_ITEMS_ON_PAGE);
        return theme('usanetwork_' . $node->type . '_consumptionator_related_items_container', array(
          'related_items_block' => $block_of_items,
          'load_more_link' => $load_more_link,
          'show_nid' => $node->nid,
          'items_pre_page_limit' => USA_CONSUMPTIONATOR_RELATED_ITEMS_ON_PAGE,
          'file_fid' => $content->fid,
        ));
      }
    }
  }

  return '';
}

/**
