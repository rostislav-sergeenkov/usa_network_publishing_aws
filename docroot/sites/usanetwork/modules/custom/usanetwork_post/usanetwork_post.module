/**
 * Returns block for latest posts for blog.
 * @TODO - may be remove this function
 */
function _usanetwork_post_get_latest_posts($blog = NULL) {
  $content = array();

  if ($blog === NULL) {
    $entity_type = NULL;
    $entity = _usanetwork_menu_get_object($entity_type);
    if ($entity) {
      switch ($entity_type) {
        case 'taxonomy_term':
          $blog = _usanetwork_post_get_blog_by_category($entity);
          break;
        default:
          if (!empty($entity->{USANETWORK_FIELD_BLOG})) {
            $category = field_get_items($entity_type, $entity, USANETWORK_FIELD_BLOG);
            if ($category && $category = reset($category)) {
              $blog = _usanetwork_post_get_blog_by_category($category['tid']);
            }
          }
          break;
      }
    }
  }
  if ($blog) {
    $display_latest_posts = field_get_items('taxonomy_term', $blog, 'field_display_latest_posts');
    if ($display_latest_posts && $display_latest_posts = reset($display_latest_posts)) {

      if ($display_latest_posts['value'] == 1) {
        $blog_terms = array_keys(taxonomy_get_children($blog->tid, $blog->vid));

        $db_select = db_select('node', 'n')
            ->fields('n', array('nid', 'title'));
        $db_select->condition('n.status', '1');
        $db_select->condition('n.type', 'post');
        $db_select->leftJoin('field_data_field_blog', 'fdfb', 'n.nid=fdfb.entity_id');
        $db_select->condition('fdfb.field_blog_tid', $blog_terms, 'IN');
        $db_select->orderBy('n.created', 'DESC');
        $db_select->range(0, 5);

        $db_result = $db_select->execute()->fetchAll();

        $posts_content = '';
        foreach ($db_result as $post) {
          $posts_content .= '<li>' . l($post->title, 'node/' . $post->nid) . '</li>';
        }

        $content = array(
          '#prefix' => '<div class="latestposts"><ul class="posts">',
          '#suffix' => '</ul></div>',
        );

        $content['banners'] = array(
          '#markup' => $posts_content,
        );
      }
    }
  }


  return $content;
}

/**
 * Returns blog categories menu.
 */
function _usanetwork_post_get_blog_menu($tid, $vid = 0, $category = NULL) {
  $tree = array();

  $children = taxonomy_get_children($tid, $vid);
  if (!empty($children)) {
    module_load_include('inc', 'pathauto', 'pathauto');
    foreach ($children as $term) {
      $path = 'taxonomy/term/' . $term->tid;
      $menu_item = array(
        'data' => l($term->name, $path, array('attributes' => array('class' => array('category-menu-' . pathauto_cleanstring($term->name)))))
      );
      // Append active class.
      if ($path == $_GET['q'] || $category == $term->tid) {
        $menu_item['class'][] = 'active';
      }
      $children = _usanetwork_post_get_blog_menu($term->tid, $term->vid, $category);
      if (!empty($children)) {
        $menu_item['children'] = $children['#items'];
        foreach ($children['#items'] as $child) {
          if (!empty($child['class']) && in_array('active', $child['class'])) {
            $menu_item['class'][] = 'active-trail';
          }
        }
      }
      $tree['#items'][$term->tid] = $menu_item;
    }
    $tree['#theme'] = 'item_list';
  }

  return $tree;
}

