function usanetwork_post_usa_omniture_alter(&$omniture_variables, $context) {
  $inherited_variables = array('s.prop4', 's.prop3');

  $entity = $context['entity'];
  $entity_type = $context['entity_type'];
  if ($entity_type == 'taxonomy_term') {
