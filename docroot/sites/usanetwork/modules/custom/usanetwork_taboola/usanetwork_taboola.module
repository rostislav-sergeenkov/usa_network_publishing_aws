/**
 * Implements hook_theme().
 */
function usanetwork_taboola_theme($existing, $type, $theme, $path)
{
  return array(
    'usanetwork_taboola' => array(
      'variables' => array(
        'output' => NULL,
      ),
      'path' => $path . '/templates',
      'template' => 'usanetwork-taboola',
    ),
  );
}
