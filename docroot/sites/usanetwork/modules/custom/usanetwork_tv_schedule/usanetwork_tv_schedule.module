  if (!empty($rows)) {
    $accessiability_text = variable_get('usanetwork_tv_schedule_accessibility_text');

    $theme_variables = array(
      'accessibility_text' => !empty($accessiability_text['value'])
        ? $accessiability_text['value']
        : '',
      'schedule_rows' => $rows,
      'navigation' => _usanetwork_tv_schedule_get_acc_week_navigation(),
    );

    return theme('usanetwork_tv_schedule_acc_table', $theme_variables);
  }

  date_default_timezone_set($orginal_tz);

  return $output;
}

function _usanetwork_tv_schedule_get_schedule_item_image($schedule_item) {
  // @TODO: Need refactoring on next sprint.
  $result = '';

  if ($schedule_item->program_type == 'movie') {
    // Find nodes with the same title (applicable for Catchall pages and others in future)
    $entities = entity_load('node', FALSE, array('title' => $schedule_item->title));

    if (!empty($entities)) {
      $entity_image_fid = '';

      foreach ($entities as $node_entity) {
        switch ($node_entity->type) {
          case 'catchall_page':
            $og_image_field = field_get_items('node', $node_entity, 'field_usa_og_image');

            if (!empty($og_image_field)) {
              $entity_image_fid = reset($og_image_field[0]);
              break;
            }

            $catchall_media_field = field_get_items('node', $node_entity, 'field_usa_catchall_media');

            if (!empty($catchall_media_field)) {
              $entity_image_fid = reset($catchall_media_field[0]);
              break;
            }

            break;
        }
      }

      if (!empty($entity_image_fid)) {
        $file = file_load($entity_image_fid);

        $result = $file->uri;
      }
    }
  }
  else {
    $show_title_aliases = _usanetwork_schedule_get_show_alias_names();
    $show_name = $schedule_item->show_title;

    if (isset($show_title_aliases[$show_name])) {
      $show_name = $show_title_aliases[$show_name];
    }
    else {
      $additional_aliases = array(
        'Law & Order: Special Victims' => 'Law & Order: SVU',
        'CSI: Crime Scene Investigation' => 'CSI',
      );

      if (isset($additional_aliases[$schedule_item->show_title])) {
        $show_name = $additional_aliases[$show_name];
      }
    }

    if (!empty($show_name)) {
      $show_nid = _usanetwork_tv_schedule_get_nid_by_title($show_name, 'tv_show');
      if (empty($show_nid)) {
        $show_nid = _usanetwork_tv_schedule_find_show_by_title($show_name);
      }

      if (!empty($show_nid)) {
        $show_node = node_load($show_nid);

        if (!empty($show_node->field_usa_tv_on_now)) {
          $image_field = field_get_items('node', $show_node, 'field_usa_tv_on_now');

          if (!empty($image_field)) {
            $result = $image_field[0]['uri'];
          }
        }
      }
    }
  }

  if (empty($result) && $schedule_item->program_type == 'movie') {
    $result = usanetwork_schedule_get_movie_default_image();
  }
  elseif (empty($result) && $schedule_item->program_type != 'movie') {
    $result = usanetwork_schedule_get_episode_default_image();
  }

  return $result;
}

/**
