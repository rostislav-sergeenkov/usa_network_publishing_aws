  if (empty($tv_schedule)) {
    date_default_timezone_set($orginal_tz);
    drupal_not_found();
    return;
  }

  $rows = array();

  foreach ($tv_schedule as $item) {
    $show_node = new stdClass();

    $classes = array();
    $start_time = (array) $item->StartTime;
    $end_time = (array) $item->EndTime;
    $program = (array) $item->ProgramName;
    $episode = (array) $item->TitleName;
    $rating = (array) $item->Rating;
    $cur_date = (array) $item->ScheduleDate;
    $cal_date = (array) $item->CalendarScheduleDate;
    $day_part = (array) $item->Daypart;
    $audio_desc = (array) $item->AudioDesc;

    if ($audio_desc[0] == 'N') {
      continue;
    }

    $show_time = strtotime($cal_date[0] .' '. $end_time[0]);
    $classes[] = ($et_time >= $show_time) ? 'off-air' : 'on-air';
    $classes[] = strtolower($day_part[0]);

    $show = trim(preg_replace('/\(.*\)/', '', $program[0]));
    $nid = _usanetwork_tv_schedule_get_nid_by_title($show, 'tv_show');
    $episode_suffix = trim(check_plain($episode[0])) != '' ? '<span class="episode-suffix"> - ' . check_plain($episode[0]) . '</span>' : '';
    $episode_show = '';
    $episode_title = $episode[0];

    if (empty($nid)) {
      if (strtoupper($show) == 'USA MOVIE') {
        $episode_show = l(check_plain($program[0]) . $episode_suffix, 'movies', array('html' => true));
      }
      elseif (strtoupper($show) == 'NHL PLAYOFFS') {
        $episode_show = l(check_plain($program[0]) . $episode_suffix, 'http://www.usanetwork.com/nhl-2015-stanley-cup-playoffs', array('html' => true));
      }
      else {
        $episode_show = check_plain($program[0]) . $episode_suffix;
      }
    } else {
      $path = drupal_get_path_alias('node/'.$nid);
      $episode_show = l(check_plain($program[0]) . $episode_suffix, $path, array('html' => true));
    }

    $episode_file = entity_load('file', FALSE, array(
      'filename' => $episode_title,
      'filemime' => 'video/mpx',
    ));

    if (!empty($episode_file)) {
      $episode_file = reset($episode_file);
      $episode_title = l($episode_title, 'file/' . $episode_file->fid);
    }

    $full_time = preg_replace('/:[0-9][0-9] /', ' ', $start_time[0]);
    $time = ''; $day_part = ''; $matches = array();

    if (preg_match("/(\d{1,2}\:\d{2})\s+(am|pm)/i", $full_time, $matches)) {
      $time = $matches[1];
      $day_part = $matches[2];
    }

    $row_variables = array(
