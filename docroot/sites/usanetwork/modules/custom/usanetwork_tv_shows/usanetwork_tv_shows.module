 * @param string $sort_field
 * @param string $sort_direction
 * @return array
 */
function _usanetwork_tv_shows_landing_page_vbget_full_all_videos($show_node, $selected_category = 0, $sort_field = 'timestamp', $sort_direction = 'DESC') {
  $data = array(
    'tid' => 0,
    'name' => t('All videos'),
    'items' => array(),
    'items_count' => 0,
    'url' => url('node/' . $show_node->nid) . '/videos?' . http_build_query(array(
        'category' => 0,
        'sort_by' => $sort_field,
        'sort_order' => $sort_direction,
      )),
    'active' => $selected_category == 0
      ? TRUE
      : FALSE,
  );

  $items_query = db_select('file_managed', 'f');
  $items_query->fields('f', array('fid'));
  $items_query->condition('f.status', '1');
  $items_query->join('field_data_field_show', 's', 'f.fid=s.entity_id');
  $items_query->condition('s.entity_type', 'file');
  $items_query->condition('s.field_show_target_id', $show_node->nid);
