function _usanetwork_tv_shows_get_content_image_url($node) {
  if (!is_object($node)) {
    $node = node_load($node);
  }

  if ($node) {
    $field_name = '';
    $image_uri = 0;

    switch ($node->type) {
      case 'media_gallery':
        $field_name = 'field_cover_item';
        break;

      case 'usanetwork_promo':
        $field_name = 'field_promo_regular_image';
        break;
    }

