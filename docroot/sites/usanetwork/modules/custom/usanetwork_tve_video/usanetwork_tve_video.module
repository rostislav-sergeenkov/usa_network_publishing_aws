/**
 * Implements hook_page_alter().
 *
 * Trying fix more button issue 
 */
function usanetwork_tve_video_page_alter(&$page) {
//  if (path_is_admin(current_path())) {
  $view_tve_script = _usanetwork_tve_video_is_video_page();
