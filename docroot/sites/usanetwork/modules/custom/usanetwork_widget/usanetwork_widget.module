/**
 * Implements hook_boot().
 */
function usanetwork_widget_boot() {
  $origin = isset($_SERVER['HTTP_ORIGIN']) ? $_SERVER['HTTP_ORIGIN'] : false;
  if ($origin) {
    drupal_add_http_header('Access-Control-Allow-Origin', '*');
  }
}

