/**
 * Implementation of hook_block_info().
 */

function usanetwork_lyris_block_info() {
  $blocks['newsletter_subscription'] = array(
    'info' => t('Newsletter Signup'),
    'cache' => DRUPAL_CACHE_PER_PAGE,
    'status' => TRUE,
  );

  return $blocks;
}

/**
 * Implementation of hook_block_view().
 */

function usanetwork_lyris_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'newsletter_subscription':
      $node = node_load(arg(1));
      // Block will be vissible depends up on the admin configuration in the tvshow content type
      if($node->field_show_news_letter[und][0]['value']) {
          $block['subject'] = t('Sign Up for Newsletter');
          $block['content'] = drupal_get_form('usanetwork_lyris_newsletter_subscription', $node);
      }
      break;
  }
  return $block;
}

