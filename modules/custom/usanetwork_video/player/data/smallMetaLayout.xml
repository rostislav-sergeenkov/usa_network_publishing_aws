<?xml version='1.0'?>
<layout>
    <controls>
        <card id='tpNormalControls'>
            <region id='tpBottomFloatRegion' alpha='85' initialHideDelay='400ms' autoHideDelay='5s' scale='0.8'>
                <row height='9'>
                    <control id='tpScrubber' verticalAlign='middle'/>
                </row>
                <row height='30'>
                    <group direction='horizontal' verticalAlign='middle'>
                        <control id='tpPlay' verticalAlign='middle'/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle'>
                        <spacer/>
                        <control id='tpCurrentTime'/>
                        <control id='tpTimeDivider'/>
                        <control id='tpTotalTime'/>
                        <spacer/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle' percentWidth='100'>
                        <control id='tpMute'/>
                        <spacer/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle'>
                        <control id='tpCC'/>
                        <control id='tpBandwidth'/>
                        <control id='tpFullScreen'/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle' width='80'>
                        <control id='tpInfo' width="58" />
                    </group>
                </row>
            </region>
        </card>
        <card id='tpFullScreenControls'>
            <region id='tpBottomFloatRegion' alpha='85' initialHideDelay='400ms' autoHideDelay='5s' scale='1.5'>
                <row height='8'>
                    <control id='tpScrubber' verticalAlign='middle'/>
                </row>
                <row height='30'>
                    <group direction='horizontal' verticalAlign='middle'>
                        <control id='tpPlay' verticalAlign='middle'/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle'>
                        <spacer/>
                        <control id='tpCurrentTime'/>
                        <control id='tpTimeDivider'/>
                        <control id='tpTotalTime'/>
                        <spacer/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle' percentWidth='100'>
                        <control id='tpMute'/>
                        <control id='tpVolumeSlider'/>
                        <spacer/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle'>
                        <control id='tpCC'/>
                        <control id='tpBandwidth'/>
                        <control id='tpFullScreen'/>
                    </group>
                    <group direction='horizontal' verticalAlign='middle' width='80'>
                        <control id='tpInfo' width='80'/>
                    </group>
                </row>
            </region>
        </card>

    </controls>
</layout>